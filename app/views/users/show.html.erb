<h1><%= @user.name %></h1>
<% if @user.avatar_file_name.nil? %>
    <%= form_for @user, url: user_path, html: { :multipart => true }, class: "form-group"  do |f| %>
      <%= f.label "Profile Picture" %>
      <%= f.file_field :avatar %>
      <%= f.submit "Add Profile Pic!", class: "btn btn-success margin-high" %>
    <% end %>
  <% else %>
  <%= image_tag(@user.avatar.url(:small)) %>
    <%= form_for @user, url: user_path, html: { :multipart => true }, class: "form-group"  do |f| %>
    <% if @user.errors.any? %>
    <div class = "error_messages">
    <h2>Form is invalid</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
    <%= f.label "Profile Picture" %>
    <%= f.file_field :avatar %>
    <%= f.submit "Update Avatar", class: "btn btn-warning margin-high" %>
    <% end %>
  <%= link_to "Edit Avatar", user_path(@user) %>
<% end %>



